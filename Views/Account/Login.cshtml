<div class="row">
    <div class="col-md-4">
        <form asp-action="Login" asp-controller="Account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="Name" class="control-label">Email</label>
                <input id="Login" asp-for="Name" placeholder="Login" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Password" class="control-label">Password</label>
                <input id="Password" asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="ReturnUrl" type="hidden" class="form-control" />
            </div>
            <div class="form-group">
                <button class="btn btn-primary mt-2" type="submit">Log In</button>
            </div>
        </form>
    </div>
</div>