@using UrlShortener.BAL.Models
@model UrlDetailsModel

@{
    ViewData["Title"] = "URL Details";
}

<div class="container my-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">URL Details</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">ID</dt>
                <dd class="col-sm-9">@Model.UrlId</dd>

                <dt class="col-sm-3">Created At</dt>
                <dd class="col-sm-9">@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm")</dd>

                <dt class="col-sm-3">Created By</dt>
                <dd class="col-sm-9">@Model.CreatedBy</dd>
            </dl>
        </div>
        <div class="card-footer text-end">
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Back to List
            </a>
        </div>
    </div>
</div>
